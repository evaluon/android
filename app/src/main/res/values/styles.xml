<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="Theme.Inci" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@color/white</item>

        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/blue</item>
    </style>

    <style name="Theme.Inci.NoActionBar" parent="@style/Theme.Inci">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>

    </style>

    <style name="Theme.Inci.Fullscreen" parent="@style/Theme.Inci">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Theme.Inci.NoActionBar.Fullscreen" parent="@style/Theme.Inci.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

</resources>
