<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_question_number"
            android:layout_width="0dp"
            android:layout_weight="0.1"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/text_question_description"
            android:layout_width="0dp"
            android:layout_weight="0.9"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </LinearLayout>

    <com.caverock.androidsvg.SVGImageView
        android:id="@+id/image_question"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/text_open"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:gravity="bottom"
        android:visibility="gone"
        android:inputType="textMultiLine"
        android:hint="@string/hint_open_question" />
    
    <RadioGroup
        android:id="@+id/option_group_closed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" >

        <RadioButton
            android:id="@+id/option_answer_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.caverock.androidsvg.SVGImageView
            android:id="@+id/image_answer_a"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RadioButton
            android:id="@+id/option_answer_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.caverock.androidsvg.SVGImageView
            android:id="@+id/image_answer_b"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/option_answer_c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.caverock.androidsvg.SVGImageView
            android:id="@+id/image_answer_c"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/option_answer_d"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.caverock.androidsvg.SVGImageView
            android:id="@+id/image_answer_d"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RadioGroup>


</LinearLayout>