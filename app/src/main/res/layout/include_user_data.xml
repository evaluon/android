<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/item_padding"

    android:orientation="vertical" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/margin_item" >

        <TextView
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_label"
            android:layout_width="wrap_content"
            android:text="@string/label_id" />

        <EditText
            android:id="@+id/text_id_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_id"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/margin_item"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" >

        <TextView
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_label"
            android:layout_width="wrap_content"
            android:text="@string/label_name" />

        <EditText
            android:id="@+id/text_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_name"
            android:inputType="textPersonName" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/margin_item"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" >

        <TextView
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_label"
            android:layout_width="wrap_content"
            android:text="@string/label_surname" />

        <EditText
            android:id="@+id/text_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_surname"
            android:inputType="textPersonName" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/margin_item"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" >

        <TextView
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_label"
            android:layout_width="wrap_content"
            android:text="@string/label_birthday" />

        <EditText
            android:id="@+id/text_birthday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_birthday"
            android:inputType="date" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/margin_item"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" >

        <TextView
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_label"
            android:layout_width="wrap_content"
            android:text="@string/label_gender" />

        <RadioGroup
            android:id="@+id/option_group_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/option_gender_male"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/option_male" />
            <RadioButton
                android:id="@+id/option_gender_female"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/option_female" />
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/margin_item"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" >

        <TextView
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_label"
            android:layout_width="wrap_content"
            android:text="@string/label_disabilities"
            android:contentDescription="@string/descriptor_disabilities" />

        <RadioGroup
            android:id="@+id/option_group_disabilities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/option_disability_none"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/option_no_disability" />
            <RadioButton
                android:id="@+id/option_disability_blind"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/option_blind" />
            <RadioButton
                android:id="@+id/option_disability_low_vision"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/option_low_vision" />
            <RadioButton
                android:id="@+id/option_disability_blind_deaf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/option_blind_deaf" />
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/margin_item"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" >

        <TextView
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_label"
            android:layout_width="wrap_content"
            android:text="@string/label_types"
            android:contentDescription="@string/descriptor_types" />

        <RadioGroup
            android:id="@+id/option_group_types"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/option_type_student"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/option_student" />
            <RadioButton
                android:id="@+id/option_type_employee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/option_employee" />
            <RadioButton
                android:id="@+id/option_type_college_applicant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/option_college_applicant" />
            <RadioButton
                android:id="@+id/option_type_job_applicant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/option_job_applicant" />
            <RadioButton
                android:id="@+id/option_type_other"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/option_other" />
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/margin_item"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" >

        <TextView
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_label"
            android:layout_width="wrap_content"
            android:text="@string/label_levels"
            android:contentDescription="@string/descriptor_levels" />

        <RadioGroup
            android:id="@+id/option_group_levels"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/option_level_elementary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/option_elementary" />
            <RadioButton
                android:id="@+id/option_level_middle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/option_middle" />
            <RadioButton
                android:id="@+id/option_level_govt_employee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/option_govt_employee" />
            <RadioButton
                android:id="@+id/option_level_college"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/option_college" />
            <RadioButton
                android:id="@+id/option_level_other"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/option_other" />
        </RadioGroup>

    </LinearLayout>
</LinearLayout>